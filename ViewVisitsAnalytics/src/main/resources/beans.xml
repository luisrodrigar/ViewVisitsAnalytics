<bean id="aPILiferayPortalesDAO"
		class="main.java.es.uniovi.innova.services.ga.implementation.portales.APILiferayPortalesDAO"></bean> 
	<bean id="newData"
		class="main.java.es.uniovi.innova.services.ga.implementation.GAnalyticsServiceNewData"></bean>
	<bean id="oldData"
		class="main.java.es.uniovi.innova.services.ga.implementation.GAnalyticsServiceOldData"></bean>


